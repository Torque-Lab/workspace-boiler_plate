{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@repo/backend-common/*": ["../../packages/backend-common/src/*"],
      "@repo/db/*": ["../../packages/db/src/*"],
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true
  },
  "include": ["src", "routes", "controllers", "middleware", "types","services","utils" ],
  "exclude": ["node_modules", "dist"]
}

